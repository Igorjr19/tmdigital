{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug backend",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@tmdigital/backend", "start:debug"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/apps/backend/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    }
  ]
}
