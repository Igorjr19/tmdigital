{
  "name": "@tmdigital/backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build -b swc",
    "start": "nest start",
    "start:dev": "nest start --watch -b swc",
    "start:debug": "nest start --debug --watch -b swc",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migration:generate": "pnpm build && pnpm exec typeorm -d ./dist/app/infrastructure/persistence/postgres-datasource.config.js migration:generate",
    "migration:run": "pnpm build && pnpm exec typeorm -d ./dist/app/infrastructure/persistence/postgres-datasource.config.js migration:run",
    "migration:revert": "pnpm build && pnpm exec typeorm -d ./dist/app/infrastructure/persistence/postgres-datasource.config.js migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/typeorm": "^11.0.0",
    "@tmdigital/shared": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "geojson": "^0.5.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.0",
    "@types/express": "^5.0.0",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "esbuild-jest": "^0.5.0",
    "jest": "^30.0.0",
    "typescript": "^5.9.2"
  }
}
